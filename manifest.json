{
  "manifest_version": 3,
  "name": "Dispatch Rider",
  "description": "A browser extension to send Discord messages directly without the need to log in to Discord",
  "version": "2.0.0",
  "action": {
    "default_popup": "index/index.html"
  },
  "options_page": "options/index.html",
  "background": {
    "service_worker": "src/service_worker.js"
  },
  "permissions": ["storage", "tabs"],
  "icons": {
    "16": "assets/logo/16x16.jpg",
    "48": "assets/logo/48x48.jpg",
    "128": "assets/logo/128x128.jpg",
    "192": "assets/logo/192x192.jpg",
    "512": "assets/logo/512x512.jpg",
    "1024": "assets/logo/logo_main.png"
  }
}
